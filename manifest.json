{
  "manifest_version": 3,
  "name": "Cookie Switch",
  "description": "Switch between multiple website accounts by swapping cookie sets.",
  "version": "1.5.0",
  "permissions": [
    "storage",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Switch",
    "default_icon": {
      "16": "icons/switch-cookie-16.png",
      "32": "icons/switch-cookie-32.png"
    }
  },
  "icons": {
    "16": "icons/switch-cookie-16.png",
    "32": "icons/switch-cookie-32.png",
    "48": "icons/switch-cookie-48.png",
    "128": "icons/switch-cookie-128.png"
  }
}
