{
  "manifest_version": 3,
  "name": "Cookie Switch",
  "description": "Switch between multiple website accounts by swapping cookie sets.",
  "version": "1.2.0",
  "permissions": [
    "storage",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cookie Switch"
  }
}
